<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

  <parameters>
    <parameter key="gallery.pre_execute_class">Rodger\GalleryBundle\Listener\PreExecuteListener</parameter>
  </parameters>

  <services>
    <service id="kernel.listener.pre_execute_listener" class="%gallery.pre_execute_class%">
      <tag name="kernel.event_listener" event="kernel.controller" method="onKernelController" />
    </service>

    <service id="form.type.image_choice.addmethod" class="Rodger\GalleryBundle\Form\ImageChoiceType">
      <tag name="form.type" alias="image_choice" />
    </service>

    <service id="form.type.image_checkbox.addmethod" class="Rodger\GalleryBundle\Form\ImageCheckboxType">
      <tag name="form.type" alias="image_checkbox" />
    </service>
  </services>
</container>
