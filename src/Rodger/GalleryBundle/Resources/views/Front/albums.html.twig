{% extends "RodgerGalleryBundle:Front:base.html.twig" %}

{% block body %}
{% render "RodgerGalleryBundle:Tag:albumsList" with {'filters' : filters} %}
{% if albums | length %}
<ul id="albums-list">
{% for album in albums %}
<li class="album">
{% include "RodgerGalleryBundle:Front:_list_album.html.twig" with { 
  'album_options' : album,
  'album'         : album[0],
  'images'        : images[album[0].slug]
} %}</li>
{% endfor %}
</ul>
{% endif %}

{% endblock body %}

{% block stylesheets %}
{{ parent() }}
<link rel="stylesheet" type="text/css" href="/bundles/rodgergallery/css/albums.list.css">
{% endblock stylesheets %}

{% block javascripts %}
{{ parent() }}
<script src="https://raw.github.com/tuupola/jquery_lazyload/master/jquery.lazyload.min.js" type="text/javascript"></script>
<script src="/js/start_lazy.js" type="text/javascript"></script>
{% endblock javascripts %}

