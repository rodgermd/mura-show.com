{% extends "RodgerGalleryBundle:Front:albums.html.twig" %}
{% block title %}{{ parent() }} â€¢ {{ album }}{% endblock title %}

{% block body %}
<h1>{{ album }}
    <span class="total-images">{{ '{0}empty album |{1}has one image|]1,Inf]contains %number% images' 
    | transchoice(album.Images | length, {"%number%" : album.Images | length})  }}</span>
</h1>
{% if images | length %}
<ul class="album-images">
{% for image in images %}
<li class="album-image">
  <a href="{{ image.thumbnail('resource') }}" title="{{ image }}" class="show-in-colorbox">
    <img src="{{ image.thumbnail( (album.Images | length) > 10 ? 'list' : 'list_medium')}}" class="lazy" alt=""/>
  </a>
</li>
{% endfor %}
</ul>
{% endif %}

{% endblock body %}

{% block javascripts %}
{{ parent() }}
<script src="/js/jquery.colorbox-min.js" type="text/javascript"></script>
<script src="/bundles/rodgergallery/js/album.view.js" type="text/javascript"></script>
{% endblock javascripts %}

{% block stylesheets %}
{{ parent() }}
<link media="screen" rel="stylesheet" href="/css/colorbox.css" />
{% endblock stylesheets %}

{% block primary_menu_items %}
{% if app.user %}
{{ parent() }}
  <li><a href="{{ path('albums.edit', {'slug' : album.slug}) }}">{{ 'Edit album' | trans }}</a></li>
{% endif %}
{% endblock primary_menu_items %}