{% block image_choice_widget %}
{% spaceless %}
  <ul {{ block('widget_container_attributes') }}>
  {% for child in form %}
      <li class="image-choice-item">
      {{ form_widget(child) }}
      {{ form_label(child) }}
      </li>
  {% endfor %}
  </ul>
{% endspaceless %}
{% endblock image_choice_widget %}

{% block image_checkbox_widget %}
{% spaceless %}
  <input type="checkbox" {{ block('widget_attributes') }}{% if value is defined %} value="{{ value }}"{% endif %}{% if checked %} checked="checked"{% endif %} />
  <a href="{{ path('image.edit', {'id' : value}) }}" title="{{ 'edit image' | trans }}"><img src="{{ thumbnail }}" alt=""/></a>
{% endspaceless %}
{% endblock image_checkbox_widget %}

{% block image_field_widget %}
{% spaceless %}
{% for child in form %} 
{% set type = child.get('type', 'checkbox') %}
{% if type == 'checkbox' %}
<div class="edit-image-thumbnail">
  <img src="{{ path }}" alt=""/>
</div>
{% endif %}
<div class="edit-image-field-{{ type  }}">
{{ form_label(child) }}
{{ form_widget(child) }} 
</div>
{% endfor %}
{% endspaceless %}
{% endblock image_field_widget %}
