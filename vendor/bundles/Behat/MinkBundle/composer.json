{
    "name": "behat/mink-bundle",
    "type": "symfony-bundle",
    "description": "Mink bundle for Symfony2",
    "keywords": ["web", "test", "browser"],
    "homepage": "http://mink.behat.org/bundle/index.html",
    "license": "MIT",
    "authors": [
        {
            "name": "Konstantin Kudryashov",
            "email": "ever.zet@gmail.com"
        }
    ],

    "require": {
        "php":                       ">=5.3.2",
        "behat/mink":                ">=1.3.2",
        "symfony/framework-bundle":  ">=2.0.0"
    },

    "autoload": {
        "psr-0": { "Behat\\MinkBundle": "" }
    },

    "target-dir": "Behat/MinkBundle",

    "repositories": {
        "behat/mink-deps": {
            "composer": { "url": "behat.org" }
        }
    }
}
